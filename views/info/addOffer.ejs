<html>
<head>
    <meta charset="UTF-8">
    <meta
            name="viewport"
            content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">
    <link rel="stylesheet" href="/css/advertise.css">
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta2/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-BmbxuPwQa2lc/FVzBcNJ7UAyJxM6wuqIj61tLrc4wSX0szH/Ev+nYRRuWlolflfl" crossorigin="anonymous">
          
</head>
<body>
<div class="container">
    <div class=" text-center mt-5 ">
        <h1>Teklif Verme Formu</h1>
    </div>
    <div class="row ">
        <div class="col-lg-7 mx-auto">
            <div class="card mt-2 mx-auto p-4 bg-light">
                <div class="card-body bg-light">
                    <div class="container">
                        <form id="contact-form" role="form" action="/addoffer/<%= postId %>" method="POST" enctype="multipart/form-data">
                            <div class="controls">
                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="form-group"> 
                                            <label for="form_name">Mağaza*</label> 
                                            <input disabled value="<%= currentUser.storeName %>" id="form_name" type="text" name="storeName" class="form-control" placeholder="Model Giriniz" required="required" data-error="Firstname is required."> </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group"> 
                                            <label for="form_name">İletişim Telefon*</label> 
                                            <input value="<%= currentUser.phone %>" id="form_name" type="number" name="phone" class="form-control" placeholder="Model Giriniz" required="required" data-error="Firstname is required."> </div>
                                    </div>
                                </div>
                                <div class="row">
                                    
                                    <div class="col-md-6">
                                        <div class="form-group"> 
                                            <label for="form_name1">Adres*</label> 
                                            <input value="<%= currentUser.address %>" id="form_name1" type="text" name="address" class="form-control" placeholder="Renk Giriniz" required="required" data-error="Firstname is required."> </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group"> 
                                            <label for="form_name1">Fiyat Teklifi*</label> 
                                            <input id="form_name1" type="number" name="price" class="form-control" placeholder="Renk Giriniz" required="required" data-error="Firstname is required."> </div>
                                    </div>
                                </div>
                                
                            </div>
                            <div class="row">
                                <div class="col-md-6">
                                    <label for="myfile">Fotoğraf Ekle*:</label>
                                    <input type="file" name="offerImages" id="myfile" multiple><br><br>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-12">
                                    <div class="form-group"> 
                                        <label for="form_message" id="desc">Teklif Hakkında *</label> 
                                        <textarea id="form_message" name="message" class="form-control desc2" placeholder="Teklif Bilgisi Giriniz" rows="4" required="required" data-error="Please, leave us a message."></textarea> </div>
                                </div>
                                <div class="col-md-12 d-flex justify-content-center"> <input type="submit" class="btn btn-primary btn-send pt-2 btn-block " value="Teklif Ver"> </div>
                            </div>

                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>



<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta2/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-b5kHyXgcpbZJO/tY9Ul7kGkf1S0CWuKcCD38l8YkeH8z8QjE0GmW1gYU5S9FOnJ0"
        crossorigin="anonymous"></script>
        <script src="/adverts/js/vendor/jquery-1.8.2.min.js"></script>
<script>
    
    $('.state').click( () => {
        if ($('.state').val() === 'hasarli' || $('.state').val() === '') {
            $('#desc').text('Hasar Hakkında *');
            $('.desc2').attr("placeholder", "Hasar Bilgisi Giriniz");
        } else {
            $('#desc').text('Yeni eklemek özeliği *');
            $('.desc2').attr("placeholder", "Yeni eklemek istediğiniz özeliği yazınız");
        }
    } )
</script>
<%- include ('../partails/footer') -%>
