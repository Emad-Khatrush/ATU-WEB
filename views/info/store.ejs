<!doctype html>
<html lang="tr">
<head>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">
    <link rel="stylesheet" href="/css/store.css">
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta2/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-BmbxuPwQa2lc/FVzBcNJ7UAyJxM6wuqIj61tLrc4wSX0szH/Ev+nYRRuWlolflfl" crossorigin="anonymous">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Open+Sans">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.4/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
    <link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css"rel="stylesheet" >
</head>
<body>
<div class="container">
    <div class="main-body">
        <nav aria-label="breadcrumb" class="main-breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="/">AnaSayfa</a></li>
                <li class="breadcrumb-item"><a href="/stores">Mağaza</a></li>
                <li class="breadcrumb-item active" aria-current="page">Mağaza Profil</li>
            </ol>
        </nav>
        <% if( currentUser && currentUser._id.equals(store._id) ) { %>
            <a href="/myprofile" type="button" class="btn btn-warning">Profil Düzenle</a>
        <% } %> 
       
        <div class="row gutters-sm">
            <div class="col-md-4 mb-3">
                <div class="card">
                    <div class="card-body">
                        <div class="d-flex flex-column align-items-center text-center">
                            <img class="img-fluid" src="<%= store.image.url ? store.image.url : '/assets/images/image/nostore.jpg'%>" alt="Admin">
                            <div class="mt-3">
                                <h4>Oto Market</h4>
                                <div class="icon d-flex justify-content-center"><i class="fas fa-star"></i><i class="fas fa-star"></i><i
                                            class="fas fa-star"></i><i class="fas fa-star"></i><i class="fas fa-star"></i>
                                </div>
                                <p class="text-secondary mb-1">Yedek parça ve aksesuar marketi
                                </p>
                                <p class="text-muted font-size-sm"> <%= store.address %>  </p>
                                <button class="btn btn-primary">Alışveriş Yap</button>
                                <button class="btn btn-outline-primary">Mesaj Gönder</button>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="card mt-3">
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item d-flex justify-content-between align-items-center flex-wrap">
                            <h6 class="mb-0"><svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-globe mr-2 icon-inline"><circle cx="12" cy="12" r="10"></circle><line x1="2" y1="12" x2="22" y2="12"></line><path d="M12 2a15.3 15.3 0 0 1 4 10 15.3 15.3 0 0 1-4 10 15.3 15.3 0 0 1-4-10 15.3 15.3 0 0 1 4-10z"></path></svg><a href="#">Website</a></h6>
                            <span class="text-secondary"><%= store.website %></span>
                        </li>
                        <li class="list-group-item d-flex justify-content-between align-items-center flex-wrap">
                            <h6 class="mb-0"><svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-instagram mr-2 icon-inline text-danger"><rect x="2" y="2" width="20" height="20" rx="5" ry="5"></rect><path d="M16 11.37A4 4 0 1 1 12.63 8 4 4 0 0 1 16 11.37z"></path><line x1="17.5" y1="6.5" x2="17.51" y2="6.5"></line></svg><a href="#">Instagram</a></h6>
                            <span class="text-secondary"><%= store.instagram %></span>
                        </li>
                        <li class="list-group-item d-flex justify-content-between align-items-center flex-wrap">
                            <h6 class="mb-0"><svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-facebook mr-2 icon-inline text-primary"><path d="M18 2h-3a5 5 0 0 0-5 5v3H7v4h3v8h4v-8h3l1-4h-4V7a1 1 0 0 1 1-1h3z"></path></svg><a href="#">Facebook</a></h6>
                            <span class="text-secondary"><%= store.facebook %></span>
                        </li>
                    </ul>
                </div>
            </div>
            <div class="col-md-8">
                <div class="card mb-3">
                    <div class="card-body">
                        <div class="row">
                            <div class="col-sm-3">
                                <h6 class="mb-0">Mağaza Adı</h6>
                            </div>
                            <div class="col-sm-9 text-secondary">
                                <%= store.storeName %>
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-sm-3">
                                <h6 class="mb-0">E-mail</h6>
                            </div>
                            <div class="col-sm-9 text-secondary">
                                <%= store.email %>
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-sm-3">
                                <h6 class="mb-0">Telefon Numarası</h6>
                            </div>
                            <div class="col-sm-9 text-secondary">
                                <%= store.phone %>
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-sm-3">
                                <h6 class="mb-0">Açıklama</h6>
                            </div>
                            <div class="col-sm-9 text-secondary">
                                <%= store.description %>
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-sm-3">
                                <h6 class="mb-0">Adres</h6>
                            </div>
                            <div class="col-sm-9 text-secondary">
                                <%= store.address %>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row gutters-sm">
                    <div class="col-sm-12 mb-12">
                        <div class="card h-100">
                            <div class="card-body">
                                <h6 class="d-flex align-items-center mb-3"><i class="material-icons text-info mr-2"></i>Mağaza Ortalaması</h6>
                                <small>Tamir Puanı</small>
                                <div class="progress mb-3" style="height: 5px">
                                    <div class="progress-bar bg-primary" role="progressbar" style="width: 80%" aria-valuenow="80" aria-valuemin="0" aria-valuemax="100"></div>
                                </div>
                                <small>Ürün Puanı</small>
                                <div class="progress mb-3" style="height: 5px">
                                    <div class="progress-bar bg-primary" role="progressbar" style="width: 72%" aria-valuenow="72" aria-valuemin="0" aria-valuemax="100"></div>
                                </div>
                                <small>Güvenilirlik</small>
                                <div class="progress mb-3" style="height: 5px">
                                    <div class="progress-bar bg-primary" role="progressbar" style="width: 89%" aria-valuenow="89" aria-valuemin="0" aria-valuemax="100"></div>
                                </div>
                                <small>Teslimat Hızı</small>
                                <div class="progress mb-3" style="height: 5px">
                                    <div class="progress-bar bg-primary" role="progressbar" style="width: 55%" aria-valuenow="55" aria-valuemin="0" aria-valuemax="100"></div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            
            <div class="row">
                <div class="col-md-12">
                    <h2>Mağaza <b>Ürünleri</b></h2>
                    <div id="myCarousel" class="carousel slide" data-ride="carousel" data-interval="0">

                        <ol class="carousel-indicators">
                            <% for( let index = 0; index < products.length; index++) { %>
                                <li data-target="#myCarousel" data-slide-to="<%= index %>" class="<%= index === 0 ? 'active' : '' %>"></li>
                            <% } %> 
                        </ol>

                        <div class="carousel-inner">
                            <% for (let index = 0; index < products.length; index++) { %>
                                <div class="item <%= index === 0 ? 'active': '' %>">
                                    <div class="row">
                                        <% products[index].forEach( (product, i) => { %>
                                            <div class="col-sm-3">
                                                <div class="thumb-wrapper">
                                                    <div class="img-box">
                                                        <img src="<%= product.images[0].url %>" class="img-responsive" alt="">
                                                    </div>
                                                    <div class="thumb-content">
                                                        <h4><%= product.title %></h4>
                                                        <p class="item-price"><strike>340.25tl</strike> <span><%= product.price %>tl</span></p>
                                                        <div class="star-rating">
                                                            <ul class="list-inline">
                                                                <li class="list-inline-item"><i class="fa fa-star"></i></li>
                                                                <li class="list-inline-item"><i class="fa fa-star"></i></li>
                                                                <li class="list-inline-item"><i class="fa fa-star"></i></li>
                                                                <li class="list-inline-item"><i class="fa fa-star"></i></li>
                                                                <li class="list-inline-item"><i class="fa fa-star-o"></i></li>
                                                            </ul>
                                                        </div>
                                                        <a href="#" class="btn btn-primary">Ürünü Gör</a>
                                                        <% if( currentUser && currentUser._id.equals(store._id) ) { %>
                                                            <a href="/product/edit/<%= product._id %>" style="background-color: #EC971F; color: #fff;" type="button" class="btn btn-warning active">Ürün Düzenle</a>
                                                        <% } %> 
                                                    </div>
                                                </div>
                                            </div>
                                        <% }) %> 
                                    </div>
                                </div>
                                
                           <% } %>
                        </div>
                        <a class="carousel-control left" href="#myCarousel" data-slide="prev">
                            <i class="fa fa-angle-left"></i>
                        </a>
                        <a class="carousel-control right" href="#myCarousel" data-slide="next">
                            <i class="fa fa-angle-right"></i>
                        </a>
                    </div>
                </div>
            </div>
            <section class="content-item" id="comments" class="m">
                <div class="row">
                    <div class="col-sm-12">
                        <% if( (currentUser && currentUser.userType !== "store") || !currentUser ) { %>
                            <form action="/comment/<%= store._id %>" method="POST">
                                <h3 class="pull-left">Yeni Yorum</h3>
                                <fieldset>
                                    <div class="row">
                                        <div class="col-sm-2 col-lg-1 hidden-xs ">
                                            <img class="img-responsive" src="<%= currentUser && currentUser.image.url ? currentUser.image.url : 'https://bootdey.com/img/Content/avatar/avatar1.png' %>" alt="" width="80px" >
                                        </div>
                                        <div class="form-group col-xs-12 col-sm-10 col-lg-11">
                                            <textarea <%= !currentUser ? 'disabled' : null %> class="form-control" id="message" name="comment" placeholder="Mesajınızı Yazın" required></textarea>
                                        </div>
                                    </div>
                                    <button class="btn btn-primary pull-right"> <%= currentUser ? 'Gönder' : 'Yorum yapmak için giriş yapın' %>  </button>
                                </fieldset>
                            </form>
                        <% } %> 

                        <% if( comments.length ) { %>
                            <h4 class="yeni-yorum">Kullanıcı Yorumları</h4>
                        <% } %>

                        <% comments.forEach( (comment) => {   %>
                            <div class="media">
                                <a class="pull-left" href="#"><img class="media-object" src="<%= comment.user.image.url ? comment.user.image.url : 'https://bootdey.com/img/Content/avatar/avatar1.png' %>" alt="" width="70"></a>
                                <div class="media-body">
                                    <h4 class="media-heading"><%= comment.user.firstName + " " + comment.user.lastName %></h4>
                                    <ul class="list-unstyled list-inline  pull-right">
                                        <li class="yorum"><a href="#"><i id="like" class="far fa-thumbs-up fa-2x mb-2"></i><b> <%= comment.like %>  </b></a>
                                    </ul>
                                    <p> <%= comment.comment %>  </p>
                                    <ul class="list-unstyled list-inline media-detail pull-left">
                                        <li><i class="fa fa-calendar"></i> <%= new Date(comment.updatedAt).toISOString().slice(0,10) %>  </li>
                                    </ul>
                                </div>
                            </div>
                        <% }) %>
                    </div>
                </div>
        </section>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta2/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-b5kHyXgcpbZJO/tY9Ul7kGkf1S0CWuKcCD38l8YkeH8z8QjE0GmW1gYU5S9FOnJ0"
        crossorigin="anonymous"></script>
<%- include ('../partails/footer') -%>