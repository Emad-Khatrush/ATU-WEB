<html>
<head>
    <meta charset="UTF-8">
    <meta
            name="viewport"
            content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">
    <link rel="stylesheet" href="/css/advertise.css">
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta2/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-BmbxuPwQa2lc/FVzBcNJ7UAyJxM6wuqIj61tLrc4wSX0szH/Ev+nYRRuWlolflfl" crossorigin="anonymous">
          
</head>
<body>
<div class="container">
    <div class=" text-center mt-5 ">
        <h1>İlan Verme Formu</h1>
    </div>
    <div class="row ">
        <div class="col-lg-7 mx-auto">
            <div class="card mt-2 mx-auto p-4 bg-light">
                <div class="card-body bg-light">
                    <div class="container">
                        <form id="contact-form" role="form" action="/addpost" method="POST" enctype="multipart/form-data">
                            <div class="controls">
                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="form-group"> 
                                            <label for="form_name">Model*</label> 
                                            <input id="form_name" type="text" name="model" class="form-control" placeholder="Model Giriniz" required="required" data-error="Firstname is required."> </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group"> 
                                            <label for="form_need1">Yakıt Türü*</label>
                                            <select id="form_need1" name="fuelType" class="form-control" required="required" data-error="Please specify your need.">
                                                <option value="Benzin">Benzin</option>
                                                <option value="Dizel">Dizel</option>
                                                <option value="Elektirkli">Elektirkli</option>

                                            </select> </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="form-group"> 
                                            <label for="form_need1">Vites*</label>
                                            <select id="form_need1" name="gear" class="form-control" required="required" data-error="Please specify your need.">
                                                <option value="Manuel">Manuel</option>
                                                <option value="Yarı Otomatik">Yarı Otomatik</option>
                                                <option value="Otomatik">Otomatik</option>
                                            </select> </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group"> 
                                            <label for="form_name1">Şehiriniz*</label> 
                                            <input id="form_name1" type="text" name="city" class="form-control" placeholder="Şehir Giriniz" required="required" data-error="Firstname is required."> </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="form-group"> 
                                            <label for="form_number2">Araç Yılı*</label> 
                                            <input id="form_number2" type="number" name="carYear" class="form-control" placeholder="Yıl Giriniz " required="required" data-error="Valid email is required."min="1985" max="2021"> </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group"> 
                                            <label for="form_name2">Motor*</label> 
                                            <input id="form_name2" type="text" name="motor" class="form-control" placeholder="Motor Hacmi Giriniz" required="required" data-error="Firstname is required."> </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group"> 
                                        </br>
                                            <label for="form_name2">Araç durumu*</label>
                                            <select required class="form-select state" name="carState" aria-label=".form-select-sm example">
                                                <option disabled selected value="">Araç durumu seçin</option>
                                                <option value="hasarli">Hasarlı</option>
                                                <option value="ekleme">Araca Yeni Özellik Ekle</option>
                                              </select>
                                        </div>
                                    </div>
                                    
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-6">
                                    <label for="myfile">Fotoğraf Ekle*:</label>
                                    <input type="file" name="postImages" id="myfile" name="myfile" multiple><br><br>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-12">
                                    <div class="form-group"> 
                                        <label for="form_message" id="desc">Hasar Hakkında *</label> 
                                        <textarea id="form_message" name="message" class="form-control desc2" placeholder="Hasar Bilgisi Giriniz" rows="4" required="required" data-error="Please, leave us a message."></textarea> </div>
                                </div>
                                <div class="col-md-12 d-flex justify-content-center"> <input type="submit" class="btn btn-primary btn-send pt-2 btn-block " value="İlan Oluştur"> </div>
                            </div>

                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>



<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta2/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-b5kHyXgcpbZJO/tY9Ul7kGkf1S0CWuKcCD38l8YkeH8z8QjE0GmW1gYU5S9FOnJ0"
        crossorigin="anonymous"></script>
        <script src="/adverts/js/vendor/jquery-1.8.2.min.js"></script>
<script>
    
    $('.state').click( () => {
        if ($('.state').val() === 'hasarli' || $('.state').val() === '') {
            $('#desc').text('Hasar Hakkında *');
            $('.desc2').attr("placeholder", "Hasar Bilgisi Giriniz");
        } else {
            $('#desc').text('Araca Yeni Özellik Ekle *');
            $('.desc2').attr("placeholder", "Yeni eklemek istediğiniz özeliği yazınız");
        }
    } )
</script>
